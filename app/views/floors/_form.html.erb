<%= form_with(model: floor) do |form| %>
  <% if floor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(floor.errors.count, "error") %> prohibited this floor from being saved:</h2>

      <ul>
        <% floor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col sm-8 mb-3">
    <div class="actions">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= form.submit class:"btn btn-success text-white me-md-2" %>
        <%= link_to 'Go Back', floors_path, class:"btn btn-outline-primary text-primary" %>
      </div>
    </div>
  </div>
  <div class="form-floating mb-3">
    <%= form.text_field :description, class:"form-control", id:"floatingInputFloor", placeholder:"Mezanine" %>
    <%= form.label :description, for:"floatingInputFloor" %>
  </div>
<% end %>
