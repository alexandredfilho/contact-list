<div class="card">
  <div class="card-header text-white bg-dark">
      <h2>Floor</h2>
  </div>
  <div class="card-body">
    <p class="card-text">
        <%= @floor.description %>
    </p>
  </div>

  <div class="card-footer">
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_floor_path(@floor), class:"btn btn-secondary text-white"  %>
    <% end %>
    <%= link_to 'Back', floors_path, class:"btn btn-dark text-white" %>
  </div>
</div>
