<div class="card">
  <div class="card-header text-white bg-dark">
      <h2><%= @department.description %></h2>
  </div>
  <div class="card-body">

    <p class="card-text">
      <strong>Floor:</strong>
        <%= @department.floor.description %>
    </p>
  </div>

  <div class="card-footer">
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_department_path(@department), class:"btn btn-secondary text-white"  %>
    <% end %>
    <%= link_to 'Back', departments_path, class:"btn btn-dark text-white" %>
  </div>
</div>
