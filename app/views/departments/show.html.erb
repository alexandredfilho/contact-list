<div class="card">
  <div class="card-header">
    <div class="row mb-3">
      <div class="col sm-8">
         <h1><%= @department.description %></h1>
      </div>
      <div class="col sm-8">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_department_path(@department),class:"btn btn-success text-white me-md-2" %>
          <% end %>
          <%= link_to 'Go Back', departments_path, class:"btn btn-outline-primary text-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-body mb-3">
            <p class="card-text mb-3"><strong>Floor: </strong><%= @department.floor.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
