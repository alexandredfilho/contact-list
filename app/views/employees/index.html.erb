
<div class="row mb-3">
  <div class="col sm-8">
    <h5>Employees</h5>
  </div>
    <% if user_signed_in? %>
      <div class="col sm-8">
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= link_to 'New Employee', new_employee_path, class:"btn btn-primary text-white me-md-2 rounded-pill border border-light" %>
        </div>
      </div>
    <% end %>
  </div>

<table class="table table-hover table-bordered">
  <thead class="table-secondary">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Email</th>
      <th>Phone Extension</th>
      <th>Department</th>
      <th>Floor</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.company %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.department.description %></td>
        <td><%= employee.department.floor.description %></td>
        <td><%= link_to 'Show', employee, class:"text-primary" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_employee_path(employee), class:"text-primary" %></td>
          <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
