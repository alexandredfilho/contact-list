<div class="row mb-3">
  <div class="col-sm-8">
    <h5>Employees</h5>
  </div>
  <% if user_signed_in? %>
    <div class="col-sm-12">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to 'New Employee', new_employee_path, class:"btn btn-primary text-white me-md-2 rounded-pill border border-light" %>
      </div>
    </div>
  <% end %>
</div>

<div class="album text-muted">
  <div class="row">
    <% @employees.each do |employee| %>
      <div class="col-lg-4 col-sm-12 mb-3">
        <div class="card" style="height: 15rem; border-radius: 2rem;">
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-6" style="height: 5rem;">
                <% if employee.photo.attached? %>
                  <%= image_tag employee.thumbnail %>
                  <% else %>
                    <%= image_tag ("avatar.jpg"), size:"90"%>
                  <% end %>
              </div>
              <div class="col-md-3 offset-md-3">
                <%= link_to employee, class:"text-primary", style:"margin-left: 5px;", "data-bs-toggle":"tooltip", "data-bs-placement":"top", title:"View" do %>
                  <i class="fas fa-eye"></i>
                <% end %>
                <% if user_signed_in? %>
                  <%= link_to edit_employee_path(employee), class:"text-primary", style:"margin-left: 5px;", "data-bs-toggle":"tooltip", "data-bs-placement":"top", title:"Edit" do %>
                    <i class="fas fa-pen"></i>
                  <% end %>
                  <%= link_to employee, method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger", style:"margin-left: 5px;", "data-bs-toggle":"tooltip", "data-bs-placement":"top", title:"Delete"  do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <h5 class="card-title mb-4">
              <%= employee.first_name %> <%= employee.last_name %>
            </h5>
            <div class="card-text">
              <%= employee.company %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

