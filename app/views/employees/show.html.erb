<div class="container">
  <div class="row justify-content-end">
    <div class="col-4 mb-3 align-self-end">
      <div class="btn-group-vertical d-grid gap-2 d-md-flex justify-content-md-end">
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_employee_path(@employee),class:"btn btn-success text-white" %>
        <% end %>
          <%= link_to 'Go Back', employees_path, class:"btn btn-outline-primary text-primary" %>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header">
      <div class="row mb-4">
        <div class="col">
          <% if @employee.photo.attached? %>
            <%= image_tag @employee.photo.variant(resize_to_limit: [90, 90]).processed,
                width: 90,
                heigth: 90
            %>
          <% else %>
           <%= image_tag ("avatar.jpg"), size:"90"%>
          <% end %>
        </div>
        <div class="col-sm-6 col-lg-12 mt-3">
          <h5><%= @employee.first_name %> <%= @employee.last_name %></h5>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-6 mb-3">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">Contact Info</h5>
            </div>
            <div class="card-body ">
              <p class="card-text mb-1"><strong>Email Address: </strong><%= mail_to @employee.email %></p>
              <p class="card-text mb-1"><strong>Phone Extension: </strong><%= tel_to @employee.phone %></p>
              <p class="card-text mb-1 text-white">.</p>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">Locale info</h5>
            </div>
            <div class="card-body">
              <p class="card-text mb-1"><strong>Company: </strong><%= @employee.company %></p>
              <p class="card-text mb-1"><strong>Department: </strong><%= @employee.department.description %></p>
              <p class="card-text mb-1"><strong>Floor: </strong><%= @employee.department.floor.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
