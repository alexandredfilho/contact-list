<div class="row justify-content-center">
  <div class="col-6">
    <h2>Log in</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-floating mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"floatingInputEmail", class:"form-control", placeholder:"email" %>
        <%= f.label :email, for:"floatingInputEmail" %><br />
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-floating">
        <%= f.password_field :password, autocomplete: "current-password", id:"floatingInputPassword", class:"form-control", placeholder:"password" %>
        <%= f.label :password, for:"floatingInputPassword" %><br />
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class:"form-check-input", id:"remember_me" %>
          <%= f.label :remember_me, class:"form-check-label", for:"remember_me" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="actions col-6 d-grid gap-2 mx-auto">
      <%= f.submit "Log in", class:"btn btn-success" %>
    </div>
  </div>
<% end %>

    <div class="row justify-content-center">
      <div class="actions col-6">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>