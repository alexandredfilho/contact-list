<div class="row justify-content-center">
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <div class="h1"><b>Contact </b>List v1</div>
      </div>
      <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"floatingInputEmail", class:"form-control", placeholder:"Email" %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <%= f.password_field :password, autocomplete: "current-password", id:"floatingInputPassword", class:"form-control", placeholder:"Password" %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">
                <%= f.check_box :remember_me, id:"remember_me" %>
                <%= f.label :remember_me, for:"remember_me" %>
                </label>
              </div>
            </div>
            <div class="col-4">
              <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
          </div>
        <% end %>

        <p class="mb-1">
          <%= render "devise/shared/links" %>
        </p>
      </div>
    </div>
  </div>
</div>
